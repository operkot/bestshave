extends layout/default

include mixin/icon
include mixin/breadcrumbs

block vars
  -
    locals.page = {
      language: 'ru',
      name: 'checkout',
      title: 'Оформление заказа • Bestshave.ru',
      description: 'Page description'
    }


block main
  
  #content.site-content.wrapper.pt-6.pb-20
    +breadcrumbs({ items: ['Оформление заказа'], classname: 'mb-6' })

    main#main.site-main
      header.entry-header.mb-10
        h1.entry-title.heading-page Оформление заказа

      form.discount.mb-8(method="post")
        p.discount-label Если у вас есть код купона, укажите его ниже.
        p.form-row.form-row-first.mb-6
          input(type="text" name="coupon_code" class="input input-text" placeholder="Код купона" id="coupon_code" value="")

        p.form-row.form-row-last
          button(type="submit" class="button btn btn--primary w-full py-4 md:w-auto" name="apply_coupon" value="Применить купон") Применить купон

      form(
        name="checkout"
        method="post"
        class="checkout woocommerce-checkout"
        action="#"
        enctype="multipart/form-data"
        novalidate="novalidate"
      )
        
        .checkout-main(id="customer_details")
          .woocommerce-billing-fields.checkout-section
            h3.heading-block.mb-4 Оплата и доставка
            .woocommerce-billing-fields__field-wrapper.wpform
              p.form-row.form-row-first.validate-required(id="billing_first_name_field")
                label(for="billing_first_name") Имя&nbsp;#[abbr.required(title="обязательно") *]
                span.woocommerce-input-wrapper
                  input(type="text" class="input-text" name="billing_first_name" id="billing_first_name" placeholder="" value="Александр" autocomplete="given-name")
              p.form-row.form-row-last.validate-required(id="billing_last_name_field" data-priority="20")
                label(for="billing_last_name") Фамилия&nbsp;#[abbr.required(title="обязательно") *]
                span.woocommerce-input-wrapper
                  input(type="text" class="input-text " name="billing_last_name" id="billing_last_name" placeholder="" value="Спицин" autocomplete="family-name")
              p.form-row.form-row-wide(id="billing_company_field" data-priority="30")
                label(for="billing_company") Название компании&nbsp;#[span.optional (необязательно)]
                span.woocommerce-input-wrapper
                  input(type="text" class="input-text " name="billing_company" id="billing_company" placeholder="" value="" autocomplete="organization")
              p.form-row.form-row-wide.address-field.update_totals_on_change.validate-required(id="billing_country_field" data-priority="40")
                label(for="billing_country") Страна/регион&nbsp;#[abbr.required(title="обязательно") *]
                span.woocommerce-input-wrapper
                  select(name="billing_country" id="billing_country")
                    option(value="") Выберите страну/регион...
                    option(value="KH") Cambodia
                    option(value="AU") Австралия
              p.form-row.address-field.validate-required.form-row-wide(id="billing_address_1_field" data-priority="50")
                label(for="billing_address_1") Адрес&nbsp;#[abbr.required(title="обязательно") *]
                span.woocommerce-input-wrapper
                  input(type="text" class="input-text " name="billing_address_1" id="billing_address_1" placeholder="Номер дома и название улицы" value="a/z 12" autocomplete="address-line1" data-placeholder="Номер дома и название улицы")
              p.form-row.address-field.form-row-wide(id="billing_address_2_field" data-priority="60")
                label(for="billing_address_2") Крыло, подъезд, этаж и т.д.&nbsp;#[span.optional (необязательно)]
                span.woocommerce-input-wrapper
                  input(type="text" class="input-text " name="billing_address_2" id="billing_address_2" placeholder="Крыло, подъезд, этаж и т.д. (необязательно)" value="")
              p.form-row.address-field.validate-required.form-row-wide(id="billing_city_field" data-priority="70")
                label(for="billing_city") Населённый пункт&nbsp;#[abbr.required(title="обязательно") *]
                span.woocommerce-input-wrapper
                  input(type="text" class="input-text " name="billing_city" id="billing_city" placeholder="" value="Куйбышево" autocomplete="address-level2")
              p.form-row.address-field.validate-required.validate-state.form-row-wide(id="billing_state_field" data-priority="80")
                label(for="billing_state") Область / район&nbsp;#[abbr.required(title="обязательно") *]
                span.woocommerce-input-wrapper
                  input(type="text" class="input-text " value="Ростовская обл." placeholder="" name="billing_state" id="billing_state" autocomplete="address-level1" data-input-classes="")
              p.form-row.address-field.validate-required.validate-postcode.form-row-wide(id="billing_postcode_field" data-priority="90")
                label(for="billing_postcode") Почтовый индекс&nbsp;#[abbr.required(title="обязательно") *]
                span.woocommerce-input-wrapper
                  input(type="text" class="input-text " name="billing_postcode" id="billing_postcode" placeholder="" value="346940" autocomplete="postal-code")
              p.form-row.form-row-wide.validate-required.validate-phone(id="billing_phone_field" data-priority="100")
                label(for="billing_phone") Телефон&nbsp;#[abbr.required(title="обязательно") *]
                span.woocommerce-input-wrapper
                  input(type="tel" class="input-text " name="billing_phone" id="billing_phone" placeholder="" value="+380714503585" autocomplete="tel")
              p.form-row.form-row-wide.validate-required.validate-email(id="billing_email_field" data-priority="110")
                label(for="billing_email") Email&nbsp;#[abbr.required(title="обязательно") *]
                span.woocommerce-input-wrapper
                  input(type="email" class="input-text " name="billing_email" id="billing_email" placeholder="" value="operkot777@gmail.com" autocomplete="email username")
          
          .woocommerce-shipping-fields.checkout-section
          
          .woocommerce-additional-fields.checkout-section
            h3.heading-block.mb-4 Детали
            .woocommerce-additional-fields__field-wrapper.wpform
              p.form-row.notes.form-row-wide(id="order_comments_field")
                label(for="order_comments") Примечание к заказу&nbsp;#[span.optional (необязательно)]
                span.woocommerce-input-wrapper
                  textarea(name="order_comments" class="input-text " id="order_comments" placeholder="Примечания к вашему заказу, например, особые пожелания отделу доставки." rows="2" cols="5")
	      
        .checkout-side
          h3.heading-block.mb-4(id="order_review_heading") Ваш заказ
          .woocommerce-checkout-review-order(id="order_review")
            .receipt.mb-6
              table.shop_table.woocommerce-checkout-review-order-table.totals
                thead
                  tr
                    th.product-name Товар
                    th.product-total Подытог
                tbody
                  tr.cart_item
                    td.product-name Станок для бритья Mühle R89 Traditional Razor&nbsp;#[strong.product-quantity ×&nbsp;1]
                    td.product-total
                      span.woocommerce-Price-amount.amount
                        bdi 2 400&nbsp;#[span.woocommerce-Price-currencySymbol ₽]
                  tr.cart_item
                    td.product-name Мыло для бритья Stirling Executive Man&nbsp;#[strong.product-quantity ×&nbsp;1]
                    td.product-total
                      span.woocommerce-Price-amount.amount
                        bdi 1 600&nbsp;#[span.woocommerce-Price-currencySymbol ₽]
                tfoot
                  tr.cart-subtotal
                    th Подытог
                    td
                      span.woocommerce-Price-amount.amount
                        bdi 4 000&nbsp;#[span.woocommerce-Price-currencySymbol ₽]
                  tr
                    th Доставка
                    td.shipping(data-title="Доставка")
                      ul.shipping-list(id="shipping_method")
                        li.shipping-method
                          input(type="radio" name="shipping_method[0]" data-index="0" id="shipping_method_0_local_pickup1" value="local_pickup:1" class="radio mr-2 shipping_method" checked="checked")
                          label(for="shipping_method_0_local_pickup1") Самовывоз
                        li.shipping-method
                          input(type="radio" name="shipping_method[0]" data-index="0" id="shipping_method_0_flat_rate2" value="flat_rate:2" class="radio mr-2 shipping_method")
                          label(for="shipping_method_0_flat_rate2") Почта России
                        li.shipping-method
                          input(type="radio" name="shipping_method[0]" data-index="0" id="shipping_method_0_flat_rate4" value="flat_rate:4" class="radio mr-2 shipping_method")
                          label(for="shipping_method_0_flat_rate4") СДЭК
                  tr.order-total
                    th Итого
                    td
                      strong
                        span.woocommerce-Price-amount.amount
                          bdi 4 000&nbsp;#[span.woocommerce-Price-currencySymbol ₽]

            .woocommerce-checkout-payment(id="payment")
              ul.wc_payment_methods.payment_methods.methods.payment.mb-6
                li.wc_payment_method.payment_method_bacs.payment-method
                  label.payment-label(for="payment_method_bacs")
                    input(id="payment_method_bacs" type="radio" class="payment-radio" name="payment_method" value="bacs" checked="checked" data-order_button_text="")
                    p Прямой банковский перевод
                  .payment_box.payment_method_bacs.payment-content
                    p Оплату нужно направлять напрямую на наш банковский счет. Используйте идентификатор заказа в качестве кода платежа. Заказ будет отправлен после поступления средств на наш счет.
                li.wc_payment_method.payment_method_cod
                  label.payment-label(for="payment_method_cod")
                    input(id="payment_method_cod" type="radio" class="payment-radio" name="payment_method" value="cod" data-order_button_text="")
                    p Оплата при доставке
                  div.payment_box.payment_method_cod.payment-content(style="display: none;")
                    p Оплата наличными при доставке заказа.

              .form-row.place-order.checkout-footer
                .woocommerce-terms-and-conditions-wrapper.mb-6
                  .woocommerce-privacy-policy-text
                    p Ваши личные данные будут использоваться для обработки ваших заказов, упрощения вашей работы с сайтом и для других целей, описанных в нашей #[a(href="#" class="woocommerce-privacy-policy-link" target="_blank") политика конфиденциальности].
            
                button(type="submit" class="btn btn--primary w-full py-4 md:w-auto") Подтвердить заказ